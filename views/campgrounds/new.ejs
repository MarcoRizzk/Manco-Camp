<% layout('layouts/boilerplate') %>

<div class="row">
    <h1 class="text-center">New Campground</h1>
    <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
        <form action="/campgrounds" method="post" novalidate class="validated-form" enctype="multipart/form-data">
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" id="title" name="campground[title]" required>
                <div class="valid-feedback">
                    It's OKay!
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label" for="location">Location</label>
                <input class="form-control" type="text" id="location" name="campground[location]" required>
                <div class="valid-feedback">
                    It's OKay!
                </div>
            </div >
            
            <div class="mb-3">
                <label for="image" class="form-label">Choose image(s):</label>
                <input class="form-control" name="image" type="file" id="image" multiple>
              </div>

            <!-- <div class="mb-3">
                <label class="form-label" for="image">Image url</label>
                <input class="form-control" type="text" id="image" name="campground[image]" required>
                <div class="valid-feedback">
                    It's OKay!
                </div>
            </div > -->
            
            <div class="mb-3">
                <label class="form-label" for="price">Campground Price</label>
                <div class="input-group">
                 <span class="input-group-text" id="price-label">$</span>
                 <input name="campground[price]" id="price" type="text" class="form-control" placeholder="0.00" aria-label="price" 
                 aria-describedby="price-label" required>
                 <div class="valid-feedback">
                    It's OKay!
                </div>
                 </div>
            </div> 

            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" type="text" id="description" name="campground[description]" required></textarea>
                <div class="valid-feedback">
                    It's OKay!
                </div>
            </div >

            <div class="mb-3">
                <button type="submit" class="btn btn-success">Add Campground</button>
            </div>
            
        </form>
        <a href="/campgrounds">All Campgrounds</a>
        
    </div>
</div>


